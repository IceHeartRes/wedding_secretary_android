<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.resident.weddingsecretary.SpecialityItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/padding_top"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:background="@drawable/circle_fill"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:layout_weight="2"
             />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/padding_top"
            android:background="@drawable/line"
            android:orientation="vertical"
            android:layout_weight="7">

            <TextView
                android:id="@+id/expert_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="@dimen/padding_top"
                android:layout_marginEnd="@dimen/padding_top"
                android:textSize="@dimen/main_item_text_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="sdfsdfdsgffdgasdfagegeh" />

            <include layout="@layout/social_links"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/padding_top"
            android:layout_weight="1"
            android:src="@drawable/ic_navigate_next_black_24dp" />/
        >

    </LinearLayout>
</LinearLayout>
