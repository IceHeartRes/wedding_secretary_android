<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_top"
            android:background="@drawable/rectangle"
            android:paddingBottom="@dimen/padding_top"
            android:paddingEnd="@dimen/padding_top"
            android:paddingStart="@dimen/padding_top"
            android:paddingTop="@dimen/padding_top"
            android:src="@drawable/ic_mood_black_24dp" />

        <TextView
            android:id="@+id/speciality_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_top"
            tools:text="Фотографы" />
    </LinearLayout>
</LinearLayout>