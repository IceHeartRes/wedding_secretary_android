<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.resident.weddingsecretary.Calendar">

    <include layout="@layout/header" />

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendar"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="250dp"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarBackgroundColor="#ffffff"
        app:compactCalendarTextColor="#000000"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#5f84ff"
        app:compactCalendarCurrentDayBackgroundColor="#71f430"
        app:compactCalendarMultiEventIndicatorColor="#fff"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginBottom="@dimen/padding_top"
        android:layout_marginStart="@dimen/padding_top"
        android:layout_marginEnd="@dimen/padding_top">
        <TextView
            android:id="@+id/event_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:text="Назначено событий: 2"
            android:textSize="18sp"
            android:layout_weight="10"/>
        <ImageView
            android:id="@+id/view_event"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_event_note_black_24dp"
            android:layout_gravity="end" />
        <ImageView
            android:id="@+id/add_event"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            android:layout_gravity="end" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
